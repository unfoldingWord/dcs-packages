{
  "compilerOptions": {
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "declarationDir": "dist",
    "outDir": "dist/",
    "rootDirs": ["src/service/base", "src/service/catalog-next"],
    "lib": ["es6", "dom"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/service/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
